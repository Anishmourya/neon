[package]
name = "{{project.name}}"
version = "{{project.version}}"
{{#if project.author}}
authors = ["{{project.author}}"]
{{/if}}
{{#if project.license}}
license = "{{project.license}}"
{{/if}}
edition = "2018"
exclude = ["index.node"]

[lib]
crate-type = ["cdylib"]

[dependencies.neon]
version = "{{versions.neon}}"
default-features = false
features = ["napi-{{versions.napi}}"]
